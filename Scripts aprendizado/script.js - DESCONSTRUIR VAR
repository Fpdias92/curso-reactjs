// DESCONSTRUIR VARIAVEL

const pessoa = {
    nome: "Felipe",
    sobrenome: "Dias",
    idade: 30,
    cargo: "Desenvolvedor"
}

console.log(pessoa);


let {idade} = pessoa; // pegando o campo 'idade' do objeto 'pessoa' e atribuindo a variavel com o mesmo nome do campo
document.write(idade);

let {nome,cargo} = pessoa; // pegando o campo 'nome' e o campo 'cargo' do objeto 'pessoa' e atribuindo a duas variaveis com o mesmo nome do campo
document.write(nome);

let {cargo:setor} = pessoa; // pegando o campo 'cargo' e atribuindo a variavel com um nome diferente 'setor'
document.write(setor);