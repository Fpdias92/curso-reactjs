var nome = '';

if (typeof localStorage.nome == 'undefined'){
    localStorage.nome = prompt("Digite seu nome");
}

document.write(localStorage.nome);


/* SESSIONSTORAGE - sessionStorage

Mesma coisa que o localStorage, mas o sessionStorage apaga os itens ao sair do navegador

*/