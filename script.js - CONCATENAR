let nome = "Felipe";
let sobrenome = "Dias";
let idade = 30;

// METODO COMUM DE CONCATENAR VARIAVEL E TEXTO (requer ' ou ")
let pessoa1 = "Meu nome é " + nome + " " + sobrenome + " e eu tenho " + idade + " anos";
document.write(pessoa1 + "<br/>");

// METODO ALTERNATIVO DE CONCATENAR VARIAVEL E TEXTO (requer ` - acento grave)
let pessoa2 = `Meu nome é ${nome} ${sobrenome} e eu tenho ${idade} anos`;
document.write(pessoa2);