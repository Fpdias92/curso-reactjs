// SPREAD OPERATOR COM VARIAVEL

let primeiros = [1,2,3];  // Variável com apenas os números 1, 2 e 3
let numeros = [4,5,6];    // Variável com apenas os números 4, 5 e 6
let total = [...primeiros,7,8,9]; // Variável com a primeira variavel junto com os números 7, 8 e 9

console.log(total); 

// [...primeiros,7,8,9] = [1,2,3,7,8,9]
// [primeiros,7,8,9] = [Array(3), 7, 8, 9]


// SPREAD OPERATOR COM OBJETO

let pessoa = {
    nome: "Felipe",
    idade: "30",
    cargo: "Desenvolvedor"
}

let novaPessoa = {
    ...pessoa,             // Adiciona as informações do outro objeto e mais 2 campos
    anoAtual: 2022,
    cidade: "Osasco"
}

console.log(novaPessoa);
