function acao(){
    document.write("Executando...<br/>");
}

//  SETINTERVAL (Temporizador - Executa diversas vezes)
//setInterval(acao, 1000);
// Ao inserir o setInterval dentro de uma variavel é possível cancelar o interval utilizando clearInterval(variavel);
x = setInterval(acao, 1000);
clearInterval(x);


//  SETINTERVAL (Timeout - Executa apenas uma vez)
//setTimeout(acao, 3000);